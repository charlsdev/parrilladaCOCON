
{{#if success_msg}}
   $(document).ready(function() {
      $.toast({
         position: 'top-right',
         heading: 'Aviso',
         text: '{{success_msg}}',
         icon: 'success',
         showHideTransition: 'plain',
         hideAfter: 5000
      })
   })
{{/if}}

