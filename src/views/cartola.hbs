                  <span>O</span>
                  <span>C</span>
                  <span>O</span>
                  <span>"</span>
               </div>
            </div>
         </div>

         <div class="row">
            {{#if allPlatos}}
               {{#each allPlatos}}
                  <div class="col-md-5 mx-auto cartola">
                     <div class="tittle">{{nomCategoria}}</div>
                        {{#if platos}}
                           {{#each platos}}
                              <div class="tipoPlato">
                                 <div class="plato">
                                    <div class="nombre">{{nomPlato}}</div>
                                    {{#if acompañado}}
                                       <div class="acompañado">{{acompañado}}</div>
                                    {{/if}}
                                 </div>

                                 <div class="precio">{{precio}}</div>
                                 <div class="estado">
                                    {{#status estado}}
                                       <span class="mode badge badge-pill badge-success">{{../estado}}</span>
                                    {{else}}
                                       <span class="mode badge badge-pill badge-danger">{{../estado}}</span>
                                    {{/status}}
                                 </div>
                              </div>
                           {{/each}}
                        {{/if}}
                  </div>
               {{/each}}
            {{/if}}
         </div>
      </div>


