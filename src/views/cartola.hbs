	<body>
      {{> loader}}
      
      <img class="imageBG" src="/img/background.png">

      <div class="container">
         <div class="row">
            <div class="col-md-12 text-center">
               <div class="lettersTittle">
                  <span>E</span>
                  <span>L</span>
                  <span>&nbsp;</span>
                  <span>P</span>
                  <span>A</span>
                  <span>R</span>
